{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-console": "off",
    "no-underscore-dangle": ["error", { 
      "allow": ["__filename", "__dirname"] 
    }],
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": "off"
  }
}