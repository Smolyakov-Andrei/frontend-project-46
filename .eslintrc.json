{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "arrow-parens": ["error", "always"],
    "import/extensions": ["error", "always"],
    "no-console": "off",
    "linebreak-style": "off",
    "no-underscore-dangle": ["error", { 
      "allow": ["__filename", "__dirname"] 
    }]
  }
}