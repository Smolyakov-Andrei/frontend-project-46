{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["@stylistic"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "@stylistic/arrow-parens": ["error", "always"],
    "@stylistic/brace-style": ["error", "1tbs"],
    "@stylistic/no-multiple-empty-lines": ["error", { "max": 0 }],
    "no-console": "off",
    "no-underscore-dangle": ["error", { 
      "allow": ["__filename", "__dirname"] 
    }]
  }
}